<article class="comment">
  <div class="well">
    <h4>
      <span class="author"><%= comment.author %></span>
      <small><%= time_tag comment.created_at %></small>
    </h4>
    <p><%= comment.message %></p>
    <%= link_to t('bt.edit'), edit_post_comment_path(comment.post, comment), class: 'btn btn-link'%>
    <%= link_to t('bt.destroy'), post_comment_path(comment.post, comment), 
                            data: { confirm: I18n.t("are_you_sure") },
                            method: :delete, class: 'btn btn-link'  %>
  </div>
</article>
