<article class="post">
  <header>
    <h3>
      <%= link_to post.title, post %>
    </h3>
    Criado em: <%= time_tag post.created_at %>
  </header>
  <p><%= post.content.slice(0, 50) + '...' %></p>
  <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-link' %>
  <%= link_to 'Destroy', post_path(post), data: { confirm: 'Are you sure?' },
        :method => :delete, class: 'btn btn-link' %>
</article>
