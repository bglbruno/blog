<article class="post">
  <header>
    <h2>
      <%= @post.title %>
      <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-link' %>
    </h2>
    Criado em <%= time_tag @post.created_at %>
</header>
  <p><%= @post.content %></p>

  <section class="comments">
    <h3>Coment√°rios</h3>

    <%= render @post.comments %>
    <h3>Comentar</h3>
    <%= simple_form_for(@new_comment) do |f| %>
      <%= f.input :author %>
      <%= f.input :message, as: :text %>
      <%= f.input :post_id, as: :hidden, input_html: { value: @post.id } %>
      <%= f.button :submit %>
    <% end %>
    
  </section>

</article>
